# Production Environment Configuration for AI Chatbot
# Copy this file and rename to .env.production for your deployment

# === REQUIRED SETTINGS ===

# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=your-production-auth-secret-here

# AI Gateway API Key (required for non-Vercel deployments)
# For Vercel deployments, OIDC tokens are used automatically
AI_GATEWAY_API_KEY=your-ai-gateway-api-key-here

# Convex Production Deployment
# Instructions: https://docs.convex.dev/
# 1. Run `npx convex deploy` to create production deployment
# 2. Copy the deployment URL and add here
CONVEX_DEPLOYMENT=your-production-convex-deployment-here
NEXT_PUBLIC_CONVEX_URL=https://your-production-convex-deployment.convex.cloud

# Redis Production URL
# Instructions: https://vercel.com/docs/redis or use Redis Cloud
REDIS_URL=redis://your-production-redis-url-here

# === OPTIONAL SETTINGS ===

# Ollama Configuration (if using local Ollama)
OLLAMA_BASE_URL=https://your-ollama-server.com
OLLAMA_API_KEY=your-ollama-api-key

# === FEATURE FLAGS ===
# Enable guest account auto-provisioning & login pathway
APP_ENABLE_GUEST_ACCOUNTS=false

# Enable teacher mode
APP_ENABLE_TEACHER_MODE=true

# Enable two-factor authentication
APP_ENABLE_TWO_FACTOR_AUTH=true

# Allow changing chat visibility & sharing conversations
APP_ENABLE_SHARE_CONVERSATIONS=true

# Allow file uploads in chat
APP_ENABLE_UPLOAD_FILES=true

# Enable weather tool responses
APP_ENABLE_WEATHER_TOOL=true

# === PRODUCTION OPTIMIZATIONS ===

# Next.js Production Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Application URL (for redirects, emails, etc.)
APP_URL=https://your-domain.com

# Email Configuration (for 2FA, notifications)
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# Monitoring & Analytics (optional)
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
SENTRY_DSN=your-sentry-dsn

# Security Settings
FORCE_HTTPS=true
SECURE_COOKIES=true

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900